<img src="assets/images/yummmy-burger.jpg" alt="A tasty looking burger">
<h1>Eat Da Burger</h1>
<hr>

<section class="row">
        <div class="col-10">
            <form action="/" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="What kind of burger would you like?">
                </div>
                <button class="btn" type="submit">Submit Order</button>
            </form>
        </div>
</section>
<br>

<section class="row">
    <div class="col-6">
        <h3>Burgers to be eaten:</h3>
        <ul class="list-group">
            {{#each burgers}}
            {{#unless this.devoured}}
            <li class="list-group-item">
                <div class="input-group">
                    <p> {{this.burger_name}} </p>
                    <span class="input-group-btn">
                        <form action="/{{this.id}}" method="POST">
                            <input type="hidden" name="devoured" value="true">
                            <button class="btn btn-default" type="submit">Devour it!</button>
                        </form>
                    </span>
                </div>
            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-6">
        <h3>Burgers already eaten:</h3>
        <div class="panel">
            <ul class="list-group">
                {{#each burgers}}
                {{#if this.devoured}}
                <li class="list-group-item">
                    <p>{{this.burger_name}} </p>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</section>